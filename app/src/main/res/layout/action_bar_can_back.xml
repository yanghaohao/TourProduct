<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bamboo_little_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/action_bar_color1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/action_bar_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_meizu"
            android:visibility="visible"
            android:paddingLeft="20dp"
            android:paddingRight="15dp" />

        <TextView
            android:id="@+id/action_bar_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="登录"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/action_bar_cancel"
            android:layout_toLeftOf="@+id/action_bar_menu"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/normal_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_action_bar"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/action_bar_menu"
            android:layout_toRightOf="@+id/action_bar_cancel">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/search"
                android:paddingLeft="10dp"
                android:drawableTint="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="5dp"
                android:id="@+id/et_actionbar_can_back"
                android:hint="搜索地名"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text"
                android:background="@drawable/action_bar_edit_text" />
        </LinearLayout>

        <ImageView
            android:id="@+id/action_bar_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:src="@mipmap/add"
            tools:visibility="visible"
            android:visibility="invisible"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp" />
    </RelativeLayout>
</LinearLayout>