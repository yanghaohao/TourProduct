<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bamboo_little_color"
    android:layout_height="55dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_weather"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/white"
            android:layout_marginRight="1dp"/>
        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27℃"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_place"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/ll_weather"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/acv"
            android:tint="@color/white"
            android:layout_marginRight="1dp"/>
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="成都"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/ll_place">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/search"
            android:paddingLeft="10dp"
            android:drawableTint="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawablePadding="5dp"
            android:id="@+id/et_actionbar"
            android:hint="搜索地名"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text"
            android:background="@drawable/action_bar_edit_text" />
    </LinearLayout>
</RelativeLayout>